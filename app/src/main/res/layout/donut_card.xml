<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Donut_Activity">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:backgroundTint="#f6e2bb"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cardTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20sp"
                android:text="Donut"
                android:textColor="#fff"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/cardImg"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@drawable/img_donut" />

            <TextView
                android:id="@+id/cardCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10sp"
                android:text="Categoria"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/cardDescricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20sp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam eget venenatis elit. Pellentesque arcu nisi, consectetur id neque in, vestibulum ultricies sapien. Nam euismod turpis a dolor gravida, ornare sodales."
                android:textColor="#fff" />


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


</LinearLayout>

